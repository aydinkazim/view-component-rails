<p style="color: green"><%= notice %></p>

<%= render(HeaderComponent.new(title: "Post Title", body: nil))%>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render(PostComponent.new(post: post)) %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
